<main>
	<div class="container">
		<div class="row">
			<div class="col-12 d-flex flex-wrap justify-content-evenly">
                {{#each products}}
                    <div class="card m-1" style="width: 18rem;">
                        <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.price}}U$D - {{this.stock}}units</p>
                            <a href="/detail/{{this.id}}" class="btn btn-primary">+info</a>
                        </div>
                    </div>
                {{/each}}
            </div>
		</div>
	</div>
</main>